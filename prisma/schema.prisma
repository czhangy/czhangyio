// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Skill {
    id          String    @id @default(cuid())
    accentHex   String   
    category    String?
    mainHex     String    
    name        String
    projects    Project[]
    proficiency Int
}

model Project {
    id        String  @id @default(cuid())
    gitLink   String?
    link      String
    name      String  @unique
    tags      Skill[]
    thumbnail String?
    timestamp DateTime
}
